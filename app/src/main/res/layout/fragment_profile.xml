<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ui.fragments.ProfileFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activities.ui.fragments.ProfileFragment">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="#FFA500"
            android:paddingBottom="24dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                app:civ_border_color="#fff"
                app:civ_border_width="4dp"
                app:civ_shadow="true"
                app:civ_shadow_color="#3f51b5"
                android:elevation="5dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="206dp"
                android:text="Tony Stork"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="If you can dream it you can do it"
                android:textColor="@color/darkblue"
                android:textSize="14sp" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/portfolio"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#FFA500"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:textStyle="bold|italic"
                    android:text="Profession" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/edit"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/darkblue"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Android Developer" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/call"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="#FFA500"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:padding="20dp"
                    android:textStyle="bold|italic"
                    android:text="Account Details" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/edit"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/darkblue"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="+1110- 111-111" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/user"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:elevation="4dp"
                    android:textColor="#FFA500"
                    android:padding="20dp"
                    android:textStyle="bold|italic"
                    android:text="Profile Details" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/edit"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textColor="@color/darkblue"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Tony Stork Williams" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:gravity="center_vertical|center_horizontal"
                android:text="tony4williams@yahoo.com" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/darkblue"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Los Angels ,US" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/darkblue"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Intersted in Software development,technically exposed" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/darkblue"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Jovial Type"/>
        </LinearLayout>

</LinearLayout>
    </ScrollView>
</FrameLayout>