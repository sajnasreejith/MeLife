<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="@drawable/bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/LinearLayout02"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/smalllogo"
                        android:text="Apply"></ImageView>

                    <TextView
                        android:id="@+id/r"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_toRightOf="@+id/logo"
                        android:fontFamily="@font/goodtimesrg"
                        android:gravity="center_vertical"
                        android:text="MeLife"
                        android:textColor="#fff"
                        android:textSize="20dp">

                    </TextView>

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:paddingRight="20dp"
                        android:src="@drawable/prof"
                        android:text="Cancel"></ImageView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:font="@font/goodtimesrg"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="7dp"
                                android:id="@+id/testicon"
                                android:src="@drawable/test"
                                app:civ_border_color="#fff"
                                app:civ_border_width="4dp"
                                app:civ_shadow="true"
                                app:civ_shadow_color="#3f51b5"
                                app:civ_shadow_radius="10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tests"
                                android:textColor="#fff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:src="@drawable/profile"
                                app:civ_border_color="#fff"
                                app:civ_border_width="4dp"
                                app:civ_shadow="true"
                                app:civ_shadow_color="#3f51b5"
                                app:civ_shadow_radius="10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Tony stork"
                                android:textColor="#fff"
                                android:typeface="serif" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.mikhaellopez.circularimageview.CircularImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:id="@+id/reporticon"
                                android:layout_marginTop="7dp"
                                android:src="@drawable/rep"
                                app:civ_border_color="#fff"
                                app:civ_border_width="4dp"
                                app:civ_shadow="true"
                                app:civ_shadow_color="#3f51b5"
                                app:civ_shadow_radius="10" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Reports"
                                android:textColor="#fff"
                                android:typeface="serif" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#fff"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/mainGrid"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:padding="14dp"
                    android:rowCount="3">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/txtpsychotest"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#F0F0F0"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/psy1"
                            android:gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/btn_psychotest"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/iconpsycho" />

                            <TextView
                                android:layout_width="103dp"
                                android:layout_height="58dp"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:paddingTop="20dp"
                                android:text="Test Categories"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:typeface="serif" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- COLUMN 2  -->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/txttestreport"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#EE82EE"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ci"
                            android:gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/report" />

                            <TextView
                                android:id="@+id/btn_testreport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="@string/text_testreports"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/txt_faq"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#FFAE42"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:background="@drawable/ma"
                            android:gravity="center_vertical|center_horizontal">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/yfaq" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="@string/text_faq"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/txt_contactus"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#00c3e3"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/br"
                            android:gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/iconcontactus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="@string/text_contactus"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/txt_aboutus"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#B57EDC"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pig"
                            android:gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/team" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="@string/text_aboutus"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/txtsetting"
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="#ff726f"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/g"
                            android:gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:src="@drawable/setti" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:text="@string/text_setting"
                                android:textAlignment="center"
                                android:textColor="#fff"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:typeface="serif" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>