<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/starttestlayout"
    tools:context=".activities.ui.fragments.StartSkillTestFragment">

<LinearLayout
android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_weight="0.2">

    <ImageView
        android:layout_width="150dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_height="150dp"
        android:id="@+id/skillimage"
        android:src="@drawable/skill"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/skillimage"
        android:textSize="25dp"
        android:typeface="serif"
        android:textStyle="bold"
        android:id="@+id/skill_title"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="20dp"
        android:text="@string/Title_skilltest"
        android:textColor="@color/themecolor" />
</LinearLayout>

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="0.4">

        <com.skydoves.elasticviews.ElasticButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_drawable"
            android:text="@string/Title_starttest"
            android:typeface="serif"
            android:id="@+id/btn_starttest"
            android:layout_marginTop="40dp"
            android:textColor="@color/darkblue"
            android:textSize="17sp"
            app:button_cornerRadius="4dp"
            app:button_duration="250"
            app:button_scale="0.87" />
    </LinearLayout>

</LinearLayout>

</FrameLayout>