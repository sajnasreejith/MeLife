<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:id="@+id/homelayout"
    android:background="@color/purewhite"
    android:weightSum="7">
    <GridLayout
        android:id="@+id/mainGrid"
        android:rowCount="3"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       >
        <!-- ROW 1  -->
        <!-- COLUMN 1  -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_rowWeight=".6"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:id="@+id/txtpsychotest"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_psychotest"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/iconpsycho" />
                <TextView
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:text="Psychometric"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:id="@+id/tviewptest"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAlignment="center"
                    android:text="Test"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- COLUMN 2  -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:id="@+id/txttestreport"
            android:layout_marginBottom="10dp"
            android:layout_rowWeight=".6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:id="@+id/btn_testreport"
                    android:src="@drawable/icontest"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:paddingTop="10dp"

                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@string/text_testreports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <!-- ROW 2  -->
        <!-- COLUMN 1  -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/whiteLogocolor"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:id="@+id/txt_faq"
            android:layout_rowWeight=".6"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:id="@+id/btn_faq"
                    android:src="@drawable/iconcre"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:textSize="15sp"

                    android:text="@string/text_faq"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!-- COLUMN 2  -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_rowWeight=".6"
            android:id="@+id/txt_contactus"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:id="@+id/btncontact"
                    android:src="@drawable/iconcontactus"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="@string/text_contactus"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"

                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- ROW 3  -->
        <!-- COLUMN 1  -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_rowWeight=".6"
            android:layout_marginLeft="16dp"
            android:id="@+id/txt_aboutus"
            android:layout_marginRight="10dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:id="@+id/btn_aboutus"
                    android:src="@drawable/icontest"
                    android:layout_height="90dp" />

                <TextView
                    android:textAlignment="center"
                    android:text="@string/text_aboutus"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"

                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- COLUMN 2  -->

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
             android:id="@+id/txtsetting"
            android:layout_columnWeight="1"
            android:layout_marginBottom="10dp"
            android:layout_rowWeight=".6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="90dp"
                    android:id="@+id/btn_setting"
                    android:src="@drawable/iconsetting"
                    android:layout_height="90dp" />
                <TextView
                    android:textAlignment="center"
                    android:text="@string/text_setting"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>



