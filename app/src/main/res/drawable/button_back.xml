<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <solid
                android:color="#996bcdfd" />
            <stroke
                android:width="1px"
                android:color="#9945a9da" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#99ba78e7" />
            <stroke
                android:width="1px"
                android:color="#99ad60e1" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <gradient android:startColor="#99f6fafd"
        android:endColor="#FFebf0fd"
        android:angle="270" />
</selector>